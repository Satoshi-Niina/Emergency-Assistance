
# Emergency Assistance System - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real API keys or secrets!

# ================================================
# Server Configuration
# ================================================
NODE_ENV=development         # Environment mode (development/production)
PORT=8080                   # Server port (80 for Azure, 8080 for local)
CLIENT_PORT=5173            # Vite dev server port

# ================================================
# API Configuration
# ================================================
API_BASE_URL=http://localhost:8080/api  # API base URL
API_PREFIX=/api                         # API route prefix

# ================================================
# Database Configuration
# ================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/webappdb  # PostgreSQL connection
PG_SSL=false                           # SSL for PostgreSQL (true for production)

# ================================================
# Security Configuration
# ================================================
JWT_SECRET=dev-jwt-secret-key-32-chars-minimum     # JWT signing secret
SESSION_SECRET=dev-session-secret-32-chars-minimum # Session encryption key
BCRYPT_SALT_ROUNDS=12                              # Password hashing rounds

# Development bypass (false for production)
BYPASS_DB_FOR_LOGIN=true

# ================================================
# CORS Configuration
# ================================================
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:8080  # Allowed origins
FRONTEND_URL=http://localhost:8080      # Frontend URL
FRONTEND_ORIGIN=http://localhost:8080   # Frontend origin
STATIC_WEB_APP_URL=http://localhost:8080 # Static web app URL

# ================================================
# OpenAI Configuration
# ================================================
OPENAI_API_KEY=                        # OpenAI API key (get from platform.openai.com)
OPENAI_MODEL=gpt-4o                   # Default OpenAI model
OPENAI_ORG_ID=                        # OpenAI organization ID (optional)
OPENAI_EMERGENCY_MODEL=gpt-4o         # Model for emergency analysis
OPENAI_KNOWLEDGE_MODEL=gpt-3.5-turbo # Model for knowledge base
OPENAI_MAX_TOKENS=2000                # Maximum response tokens
OPENAI_TEMPERATURE=0.7                # Response creativity (0.0-1.0)

# ================================================
# Knowledge Base Configuration
# ================================================
LOCAL_DEV=true                        # Local development flag
KNOWLEDGE_BASE_PATH=../knowledge-base # Knowledge base directory
IMAGES_BASE_PATH=./knowledge-base/images # Images directory
KNOWLEDGE_BASE_ENABLED=true           # Enable knowledge base features

# ================================================
# File Management
# ================================================
FAULT_HISTORY_STORAGE_MODE=file       # Storage mode (file/database)
CHAT_EXPORTS_PATH=./knowledge-base/exports # Chat export directory
CHAT_IMAGES_PATH=./knowledge-base/images/chat-exports # Chat images directory
FAULT_HISTORY_IMAGES_DIR=knowledge-base/images/chat-exports # Fault history images

# ================================================
# Session Configuration
# ================================================
SESSION_DRIVER=file                   # Session storage (file/database)
SESSION_LIFETIME=120                  # Session lifetime in minutes

# ================================================
# Azure Configuration (Production Only)
# ================================================
AZURE_STORAGE_CONNECTION_STRING=      # Azure Blob Storage connection string
AZURE_STORAGE_ACCOUNT_NAME=           # Azure Storage account name
AZURE_STORAGE_ACCOUNT_KEY=            # Azure Storage account key
AZURE_CONTAINER_NAME=emergency-uploads # Azure Blob container name

# ================================================
# External APIs (Optional)
# ================================================
WEATHER_API_KEY=                      # Weather service API key
MAPS_API_KEY=                         # Maps service API key
NOTIFICATION_SERVICE_KEY=             # Notification service key

# ================================================
# Emergency System Configuration
# ================================================
MAX_UPLOAD_SIZE=10485760              # Maximum file upload size (bytes)
EMERGENCY_TIMEOUT=30000               # Emergency response timeout (ms)
DEFAULT_EMERGENCY_CONTACT=911         # Default emergency contact
AI_EMERGENCY_ANALYSIS=true            # Enable AI emergency analysis
AUTO_EMERGENCY_RESPONSE=false         # Auto-response for critical situations
REAL_TIME_MONITORING=true             # Enable real-time monitoring

# ================================================
# Development Settings
# ================================================
DEBUG_MODE=true                       # Enable debug mode (false for production)
HOT_RELOAD=true                       # Enable hot reload (false for production)
VERBOSE_LOGGING=true                  # Enable verbose logging (false for production)
ALLOW_DUMMY=true                      # Allow dummy data (false for production)

# ================================================
# Production Environment Variables (Azure App Service)
# ================================================
# Set these in Azure App Service > Configuration > Application Settings:
#
# NODE_ENV=production
# PORT=80
# API_BASE_URL=https://your-app.azurewebsites.net/api
# DATABASE_URL=postgresql://user:pass@server.postgres.database.azure.com:5432/db
# JWT_SECRET=<strong-32-char-secret>
# SESSION_SECRET=<strong-32-char-secret>
# BYPASS_DB_FOR_LOGIN=false
# OPENAI_API_KEY=<your-openai-key>
# CORS_ALLOW_ORIGINS=https://your-app.azurewebsites.net
# FRONTEND_URL=https://your-app.azurewebsites.net
# LOCAL_DEV=false
# AZURE_STORAGE_CONNECTION_STRING=<azure-storage-connection>
# DEBUG_MODE=false
# HOT_RELOAD=false
# VERBOSE_LOGGING=false
