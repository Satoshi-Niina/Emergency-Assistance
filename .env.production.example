# 本番環境用設定
NODE_ENV=production
PORT=3001

# フロントエンドURL（本番）
VITE_API_BASE_URL=https://emergency-backend-webapp.azurewebsites.net
FRONTEND_URL=https://witty-river-012f39e00.1.azurestaticapps.net

# セッション設定（本番）
SESSION_SECRET=emergency-assistance-session-secret-production-2024

# データベース設定（本番 - Azure PostgreSQL）
# 注意: 本番環境では App Settings で DATABASE_URL を設定する必要があります
# 例: postgresql://username:password@servername.postgres.database.azure.com:5432/databasename?sslmode=require
DATABASE_URL=

# エンコーディング設定
LANG=ja_JP.UTF-8
LC_ALL=ja_JP.UTF-8
NODE_OPTIONS=--max-old-space-size=4096

# OpenAI設定（本番環境では App Settings で設定）
OPENAI_API_KEY=

# その他の設定
LOG_LEVEL=info
MAX_FILE_SIZE=10485760
MAX_UPLOAD_FILES=5
MAX_CHAT_HISTORY=100
