{
  "routes": [
    {
      "route": "/main.mjs",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      }
    },
    {
      "route": "/chunk.mjs",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      }
    },
    {
      "route": "/style.css",
      "headers": {
        "Content-Type": "text/css; charset=utf-8"
      }
    },
    {
      "route": "/runtime-config.js",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      }
    },
    {
      "route": "/login",
      "rewrite": "/index.html"
    },
    {
      "route": "/chat",
      "rewrite": "/index.html"
    },
    {
      "route": "/settings",
      "rewrite": "/index.html"
    },
    {
      "route": "/history",
      "rewrite": "/index.html"
    },
    {
      "route": "/documents",
      "rewrite": "/index.html"
    },
    {
      "route": "/troubleshooting",
      "rewrite": "/index.html"
    },
    {
      "route": "/emergency-guide",
      "rewrite": "/index.html"
    },
    {
      "route": "/users",
      "rewrite": "/index.html"
    },
    {
      "route": "/base-data",
      "rewrite": "/index.html"
    },
    {
      "route": "/machine-management",
      "rewrite": "/index.html"
    },
    {
      "route": "/system-diagnostic",
      "rewrite": "/index.html"
    },
    {
      "route": "/api/*",
      "allowedRoles": [
        "anonymous",
        "authenticated"
      ]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/main.mjs",
      "/chunk.mjs",
      "/style.css",
      "/runtime-config.js",
      "/assets/*",
      "*.js",
      "*.mjs",
      "*.css",
      "*.map",
      "*.png",
      "*.jpg",
      "*.jpeg",
      "*.gif",
      "*.svg",
      "*.ico",
      "*.woff",
      "*.woff2",
      "*.ttf",
      "*.eot",
      "*.wasm",
      "/api/*"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript; charset=utf-8",
    ".mjs": "application/javascript; charset=utf-8",
    ".css": "text/css; charset=utf-8",
    ".html": "text/html; charset=utf-8",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".gif": "image/gif",
    ".svg": "image/svg+xml",
    ".woff": "font/woff",
    ".woff2": "font/woff2",
    ".ttf": "font/ttf",
    ".eot": "application/vnd.ms-fontobject",
    ".wasm": "application/wasm"
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self'; img-src 'self' data: blob: https: https://*.blob.core.windows.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https: wss: ws:; font-src 'self' https://fonts.gstatic.com;",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200,
      "exclude": [
        "/main.mjs",
        "/chunk.mjs",
        "/style.css",
        "/runtime-config.js",
        "/assets/*",
        "*.js",
        "*.mjs",
        "*.css",
        "*.map",
        "*.png",
        "*.jpg",
        "*.jpeg",
        "*.gif",
        "*.svg",
        "*.ico",
        "*.woff",
        "*.woff2",
        "*.ttf",
        "*.eot",
        "*.wasm",
        "/api/*"
      ]
    }
  }
}
