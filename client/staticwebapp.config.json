{
  "routes": [
    {
      "route": "/api/auth/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/auth/*"
    },
    {
      "route": "/api/chatgpt/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/chatgpt/*"
    },
    {
      "route": "/api/chats/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/chats/*"
    },
    {
      "route": "/api/knowledge/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/knowledge/*"
    },
    {
      "route": "/api/emergency-flow/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/emergency-flow/*"
    },
    {
      "route": "/api/emergency-guide/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/emergency-guide/*"
    },
    {
      "route": "/api/tech-support/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/tech-support/*"
    },
    {
      "route": "/api/troubleshooting/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/troubleshooting/*"
    },
    {
      "route": "/api/files/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/files/*"
    },
    {
      "route": "/api/flow-generator/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/flow-generator/*"
    },
    {
      "route": "/api/health",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/health"
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend-api.azurewebsites.net/api/*"
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*", "/api/*"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With, Origin, Accept",
    "Access-Control-Allow-Credentials": "true"
  }
} 