{
  "routes": [
    {
      "route": "/api/auth/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend.azurewebsites.net/api/auth/{*path}",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With, Origin, Accept",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://emergency-backend.azurewebsites.net/api/{*path}",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With, Origin, Accept",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*", "/api/*", "/auth/*"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With, Origin, Accept",
    "Access-Control-Allow-Credentials": "true"
  }
}
