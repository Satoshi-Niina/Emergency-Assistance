# Emergency Assistance Client - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real API keys or secrets!

# ================================================
# API Configuration
# ================================================
# API base URL (for local dev: http://localhost:8080/api, for production: /api)
VITE_API_BASE_URL=/api
# Server URL (for local dev with separate server)
VITE_SERVER_URL=http://localhost:8080

# ================================================
# Application Configuration
# ================================================
VITE_APP_TITLE=Emergency Assistance System
VITE_APP_VERSION=1.0.2
VITE_APP_DESCRIPTION=Emergency assistance and response management system

# ================================================
# Feature Flags
# ================================================
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_AI_ASSISTANCE=true
VITE_ENABLE_CHAT_EXPORT=true
VITE_ENABLE_MACHINE_SELECTION=true

# ================================================
# External Service Keys (LEAVE EMPTY - FILL IN .env)
# ================================================
# Maps service for location display
VITE_MAPS_API_KEY=
# Analytics service (optional)
VITE_ANALYTICS_ID=

# ================================================
# Development Configuration
# ================================================
VITE_DEV_MODE=true
VITE_DEBUG_LEVEL=info

# ================================================
# Client Build Configuration
# ================================================
# Build output directory
VITE_BUILD_OUTDIR=dist
# Base path for assets (production: /assets/)
VITE_BASE_PATH=/

# ================================================
# Production Environment Variables
# ================================================
# Set these when building for production:
#
# VITE_API_BASE_URL=/api
# VITE_SERVER_URL=https://your-app.azurewebsites.net
# VITE_DEV_MODE=false
# VITE_DEBUG_LEVEL=error
