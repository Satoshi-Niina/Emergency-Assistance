# ========================================
# Emergency Assistance System Cloud Environment
# ========================================

# ========================================
# Database Configuration
# ========================================
# PostgreSQL user
POSTGRES_USER=postgres

# PostgreSQL password (REQUIRED)
POSTGRES_PASSWORD=your-secure-password-here

# PostgreSQL database name
POSTGRES_DB=emergency_assistance

# ========================================
# Application Configuration
# ========================================
# Environment (production)
NODE_ENV=production

# Session secret (REQUIRED - generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# OpenAI API key (for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# ========================================
# URL Configuration
# ========================================
# Frontend URL
FRONTEND_URL=https://your-domain.com

# Backend API URL (used by frontend)
VITE_API_BASE_URL=https://your-domain.com/api

# ========================================
# AWS S3 Configuration
# ========================================
# AWS Access Key ID (REQUIRED for S3)
AWS_ACCESS_KEY_ID=your-aws-access-key-id

# AWS Secret Access Key (REQUIRED for S3)
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Bucket name (REQUIRED)
S3_BUCKET=your-s3-bucket-name

# S3 Region
S3_REGION=us-east-1

# ========================================
# Azure Blob Storage Configuration (Alternative)
# ========================================
# Azure Storage Account
AZURE_STORAGE_ACCOUNT=your-storage-account

# Azure Storage Key
AZURE_STORAGE_KEY=your-storage-key

# Azure Container Name
AZURE_CONTAINER_NAME=your-container-name

# ========================================
# Google Cloud Storage Configuration (Alternative)
# ========================================
# Google Cloud Project ID
GCP_PROJECT_ID=your-project-id

# Google Cloud Storage Bucket
GCS_BUCKET=your-gcs-bucket

# Google Cloud Service Account Key (JSON)
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# ========================================
# Logging Configuration
# ========================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ========================================
# Security Configuration
# ========================================
# Enable HTTPS (true/false)
ENABLE_HTTPS=true

# SSL certificate path (if using HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ========================================
# Backup Configuration
# ========================================
# Enable automatic backups (true/false)
ENABLE_AUTO_BACKUP=true

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Cloud backup retention days
CLOUD_BACKUP_RETENTION_DAYS=90

# ========================================
# Resource Limits (Cloud)
# ========================================
# Memory limit for PostgreSQL (e.g., 2G, 1G)
POSTGRES_MEMORY_LIMIT=2G

# Memory limit for Backend (e.g., 1G, 512M)
SERVER_MEMORY_LIMIT=1G

# Memory limit for Frontend (e.g., 512M, 256M)
CLIENT_MEMORY_LIMIT=512M

# ========================================
# Cloud Provider Specific Settings
# ========================================

# AWS ECS/Fargate Settings
AWS_ECS_CLUSTER=your-ecs-cluster
AWS_ECS_SERVICE=emergency-assistance
AWS_ECS_TASK_DEFINITION=emergency-assistance-task

# Azure Container Instances Settings
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_LOCATION=eastus
AZURE_CONTAINER_REGISTRY=your-acr.azurecr.io

# Google Cloud Run Settings
GCP_REGION=us-central1
GCP_SERVICE_ACCOUNT=emergency-assistance@your-project.iam.gserviceaccount.com

# ========================================
# Monitoring and Logging
# ========================================
# CloudWatch Log Group (AWS)
AWS_CLOUDWATCH_LOG_GROUP=/aws/ecs/emergency-assistance

# Application Insights (Azure)
AZURE_APP_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Stackdriver (Google Cloud)
GCP_STACKDRIVER_PROJECT_ID=your-project-id 