FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    curl \
    git

# Copy package files
COPY client/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY client/ .

# Create necessary directories
RUN mkdir -p logs

# Expose port
EXPOSE 5002

# Set environment
ENV NODE_ENV=development
ENV PORT=5002

# Start development server
CMD ["npm", "run", "dev"] 