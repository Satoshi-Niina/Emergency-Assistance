# ========================================
# Emergency Assistance System Docker Environment
# ========================================

# ========================================
# Database Configuration
# ========================================
# PostgreSQL user
POSTGRES_USER=postgres

# PostgreSQL password (REQUIRED)
POSTGRES_PASSWORD=your-secure-password-here

# PostgreSQL database name
POSTGRES_DB=emergency_assistance

# ========================================
# Application Configuration
# ========================================
# Environment (development, production)
NODE_ENV=production

# Session secret (REQUIRED - generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# OpenAI API key (for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# ========================================
# URL Configuration
# ========================================
# Frontend URL
FRONTEND_URL=http://localhost:5002

# Backend API URL (used by frontend)
VITE_API_BASE_URL=http://localhost:3001

# ========================================
# Logging Configuration
# ========================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ========================================
# Security Configuration
# ========================================
# Enable HTTPS (true/false)
ENABLE_HTTPS=false

# SSL certificate path (if using HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ========================================
# Backup Configuration
# ========================================
# Enable automatic backups (true/false)
ENABLE_AUTO_BACKUP=true

# Backup retention days
BACKUP_RETENTION_DAYS=7

# ========================================
# Resource Limits (Production)
# ========================================
# Memory limit for PostgreSQL (e.g., 1G, 512M)
POSTGRES_MEMORY_LIMIT=1G

# Memory limit for Backend (e.g., 512M, 256M)
SERVER_MEMORY_LIMIT=512M

# Memory limit for Frontend (e.g., 256M, 128M)
CLIENT_MEMORY_LIMIT=256M

# ========================================
# Development Settings (uncomment for development)
# ========================================
# NODE_ENV=development
# LOG_LEVEL=debug
# ENABLE_AUTO_BACKUP=false 