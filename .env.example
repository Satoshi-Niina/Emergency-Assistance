# Emergency Assistance Application - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# NOTE: Password must not contain URL special characters (!@#$%^&*()+={}[]|:;"'<>?,./~`)
# Use only alphanumeric characters, hyphens, and underscores
DATABASE_URL=postgresql://username:password@server:5432/database?sslmode=require

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=knowledge

# Application Settings
NODE_ENV=production
PORT=8080

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Session Configuration
SESSION_SECRET=your-secret-session-key-here
SESSION_PARTITIONED=true

# JWT Configuration (if used)
JWT_SECRET=your-jwt-secret-here

# OpenAI Configuration (if used)
OPENAI_API_KEY=your-openai-api-key-here
