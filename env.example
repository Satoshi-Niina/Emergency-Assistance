# ========================================
# Emergency Assistance System Environment
# ========================================

# ========================================
# Database Configuration
# ========================================
# PostgreSQL connection string (Azure PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/webappdb

# Alternative: Individual PostgreSQL connection parameters
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=webappdb
PGPORT=5432

# ========================================
# API Configuration
# ========================================
# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://witty-river-012f39e00.1.azurestaticapps.net

# API Base URL (Azure Static Web Apps uses internal API Functions)
# Leave empty for Azure Static Web Apps to use internal APIs
VITE_API_BASE_URL=

# ========================================
# Session Configuration
# ========================================
# Secret key for session encryption (generate a random string)
SESSION_SECRET=emergency-assistance-session-secret-2024

# ========================================
# Server Configuration
# ========================================
# Environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3001

# ========================================
# API Keys
# ========================================
# OpenAI API key for AI features
OPENAI_API_KEY=your-openai-api-key-here

# ========================================
# Application Settings
# ========================================
# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# File upload limits
MAX_FILE_SIZE=10485760
MAX_UPLOAD_FILES=5

# Chat history limits
MAX_CHAT_HISTORY=100

# ========================================
# Backup Configuration
# ========================================
# Enable/disable automatic backups (true/false)
BACKUP_ENABLED=true

# Maximum number of backup files to keep per file
BACKUP_MAX_FILES=3

# Backup folder name (relative to knowledge-base)
BACKUP_FOLDER_NAME=backups

# ========================================
# Production Settings (uncomment for production)
# ========================================
# NODE_ENV=production
# LOG_LEVEL=info
# FRONTEND_URL=https://your-frontend-domain.com
# VITE_API_BASE_URL=https://your-backend-domain.com
# BACKUP_ENABLED=false 