
entrypoint = "server/index.ts"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[env]
PATH = "${REPLIT_NIX_CACHE}/bin"
XDG_CONFIG_HOME = "${REPLIT_NIX_CACHE}/.config"
npm_config_prefix = "${REPLIT_NIX_CACHE}"

[languages]

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "node server/index.js"]
build = ["sh", "-c", "npm install && cd client && npm install && cd .. && npm run build"]
deploymentTarget = "cloudrun"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:all"
