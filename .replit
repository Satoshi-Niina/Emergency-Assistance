entrypoint = "server/index.ts"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[env]
PATH = "${REPLIT_NIX_CACHE}/bin"
XDG_CONFIG_HOME = "${REPLIT_NIX_CACHE}/.config"
npm_config_prefix = "${REPLIT_NIX_CACHE}"

run = "npm run dev:simple"

[workflows]
runButton = "Express Static Server"

[[workflows.workflow]]
name = "Start Application"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:all"

[[workflows.workflow]]
name = "Express Static Server"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build:client"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx server/index.ts"
