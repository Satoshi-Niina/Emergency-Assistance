modules = ["nodejs-20", "web", "bash", "postgresql-16"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[env]
PATH = "${REPLIT_NIX_CACHE}/bin"
XDG_CONFIG_HOME = "${REPLIT_NIX_CACHE}/.config"
npm_config_prefix = "${REPLIT_NIX_CACHE}"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Clean Development"
author = 39467490
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && VITE_PORT=5001 npm run dev -- --host 0.0.0.0 --port 5001 --force"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx server/index.ts"

[[workflows.workflow]]
name = "Development Server"
author = 39467490
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev -- --host 0.0.0.0 --port 5000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node --loader tsx/esm server/index.ts"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 5002
externalPort = 3003

[[ports]]
localPort = 5003
externalPort = 4200

[[ports]]
localPort = 5004
externalPort = 5000

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 5174
externalPort = 3002

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "npm run dev"]
