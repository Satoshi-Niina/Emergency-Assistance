entrypoint = "server/index.ts"
modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[env]
PATH = "${REPLIT_NIX_CACHE}/bin"
XDG_CONFIG_HOME = "${REPLIT_NIX_CACHE}/.config"
npm_config_prefix = "${REPLIT_NIX_CACHE}"

run = "npm run dev:all"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Development Server"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"

[[workflows.workflow]]
name = "Run"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build:client"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node --loader tsx/esm server/index.ts"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "npm run dev:all"]
