
entrypoint = "server/index.ts"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[env]
PATH = "${REPLIT_NIX_CACHE}/bin"
XDG_CONFIG_HOME = "${REPLIT_NIX_CACHE}/.config"
npm_config_prefix = "${REPLIT_NIX_CACHE}"

[languages]

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "npm start"]
build = ["sh", "-c", "npm run build:client"]
deploymentTarget = "cloudrun"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3002

[[ports]]
localPort = 5004
externalPort = 3003

[[ports]]
localPort = 5005
externalPort = 4200

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸ›‘ Cleaning up processes...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = 'pkill -f "npm\|vite\|tsx" 2>/dev/null || true'

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸš€ Starting application...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:all"

[[workflows.workflow]]
name = "Restart Dev Server"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"npm run dev\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:all"

[[workflows.workflow]]
name = "Clean Start"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = 'pkill -f "npm\|vite\|tsx" 2>/dev/null || true'

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:all"
