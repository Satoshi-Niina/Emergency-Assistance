
entrypoint = "server/index.ts"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[env]
PATH = "${REPLIT_NIX_CACHE}/bin"
XDG_CONFIG_HOME = "${REPLIT_NIX_CACHE}/.config"
npm_config_prefix = "${REPLIT_NIX_CACHE}"

[languages]

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "npm start"]
build = ["sh", "-c", "npm run build:client"]
deploymentTarget = "cloudrun"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3002

[[ports]]
localPort = 5004
externalPort = 3003

[[ports]]
localPort = 5005
externalPort = 4200

[[ports]]
localPort = 5006
externalPort = 5000

[[ports]]
localPort = 5173
externalPort = 5173

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:simple"

[[workflows.workflow]]
name = "Start Simple Server"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -9 -f \"node\" 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -9 -f \"tsx\" 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -9 -f \"npm\" 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "fuser -k 5000/tcp 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:simple"

[[workflows.workflow]]
name = "Simple Server Only"
author = 39467490
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = 'pkill -9 -f "node\|tsx\|npm\|vite" 2>/dev/null || true'

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run build && cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "DISABLE_VITE=true NODE_ENV=production tsx server/index.ts"
