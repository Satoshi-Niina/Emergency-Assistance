{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "server",
    "outDir": "server/dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "server/dist",
    "server/node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
