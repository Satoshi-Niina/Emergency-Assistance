# Emergency Assistance Client - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================================
# API Configuration
# ================================================
VITE_API_BASE_URL=http://localhost:3001/api
VITE_SERVER_URL=http://localhost:3001

# ================================================
# Application Configuration
# ================================================
VITE_APP_TITLE=Emergency Assistance System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Emergency assistance and response management system

# ================================================
# Feature Flags
# ================================================
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_OFFLINE_MODE=true

# ================================================
# External Service Keys (LEAVE EMPTY - FILL IN .env)
# ================================================
# Maps service for location display
VITE_MAPS_API_KEY=
# Analytics service (optional)
VITE_ANALYTICS_ID=

# ================================================
# Development Configuration
# ================================================
VITE_DEV_MODE=true
VITE_DEBUG_LEVEL=info