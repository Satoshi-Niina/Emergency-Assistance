{
  "name": "emergency-assistance",
  "version": "1.0.0",
  "description": "Emergency Assistance System with AI-powered support",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:local": "concurrently \"npm run dev:local-server\" \"npm run dev:local-client\"",
    "dev:server": "cd server && set PORT=3001 && npm run dev",
    "dev:client": "cd client && vite",
    "dev:local-server": "tsx server/index.dev.ts",
    "dev:local-client": "cd client && vite",
    "build": "cd server && npm install && npm run build",
    "build:shared": "cd shared && npm run build",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "node server.js",
    "hello": "cd server && HELLO_ONLY=1 npm start",
    "hello:win": "cd server && $env:HELLO_ONLY=\"true\" && npm start",
    "start:prod": "cd server && npm run start:prod",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ../shared && npm install",
    "clean": "node scripts/clean.mjs",
    "clean:all": "node scripts/clean-all.mjs",
    "clean:safe": "node scripts/clean-safe.mjs",
    "clean:ultimate": "node scripts/clean-ultimate.mjs",
    "clean:legacy": "npm install --legacy-peer-deps && cd client && npm install --legacy-peer-deps && cd ../server && npm install --legacy-peer-deps && cd ../shared && npm install --legacy-peer-deps",
    "clean:build": "rm -rf client/dist server/dist shared/dist",
    "db:migrate": "cd server && npm run migrate",
    "db:generate": "cd server && npm run generate",
    "db:studio": "cd server && npm run studio",
    "db:seed": "tsx scripts/seed-history-data.ts",
    "db:test": "tsx server/scripts/test-db-connection.ts",
    "migrate:images": "tsx scripts/migrate-images-to-db.ts",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "postinstall": "cd server && npm install && npm run build"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.28.0",
    "bcrypt": "^6.0.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "express": "^4.21.2",
    "fuse.js": "^7.1.0",
    "pg": "^8.16.3",
    "tsx": "^4.20.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "emergency",
    "assistance",
    "ai",
    "chat",
    "support",
    "react",
    "typescript",
    "postgresql"
  ],
  "author": "Emergency Assistance Team",
  "license": "MIT",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  }
}
