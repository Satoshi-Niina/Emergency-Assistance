{
  "name": "emergency-assistance-system",
  "version": "1.0.0",
  "type": "module",
  "main": "server/index.js",
  "license": "MIT",
  "scripts": {
    "dev:clean": "kill-port 3001 5000 && npm installnpm run dev",
    "dev": "concurrently \"npm:dev-client\" \"npm:dev-server\"",
    "dev-client": "cd client && vite --host 0.0.0.0 --port 5001",
    "dev-server": "tsx server/index.ts",
    "dev:server": "tsx server/index.ts",
    "dev:client": "cd client && vite --host 0.0.0.0 --port 5000",
    "dev:all": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "dev:backend-dynamic": "tsx server/index.ts",
    "dev:client-dynamic": "cd client && vite --host 0.0.0.0 --port 5000",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "build:shared": "cd shared && npm run build",
    "build:client": "cd client && vite build",
    "build:server": "tsc --project server/tsconfig.build.json",
    "start": "node server/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "clean:ports": "kill-port 3001 5000",
    "migrate": "drizzle-kit push:pg",
    "clean": "npm run clean:build && npm run clean:temp",
    "clean:build": "rimraf dist client/dist shared/dist",
    "clean:temp": "rimraf temp/* uploads/temp/*",
    "clean:production": "node scripts/cleanup-production.js",
    "deploy:prepare": "npm run clean && npm run build",
    "deploy:staging": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh staging",
    "deploy:production": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh production",
    "docker:build": "docker build -t emergency-assistance .",
    "docker:run": "docker run -p 3001:3001 emergency-assistance",
    "azure:sync:upload": "tsx scripts/azure-sync-upload.ts",
    "azure:sync:download": "tsx scripts/azure-sync-download.ts",
    "azure:backup": "tsx scripts/azure-backup.ts",
    "azure:restore": "tsx scripts/azure-restore.ts",
    "azure:list-backups": "tsx scripts/azure-list-backups.ts",
    "db:migrate:azure": "tsx scripts/migrate-db.ts",
    "db:test": "tsx scripts/test-db-connection.ts",
    "db:seed": "tsx scripts/seed-data.ts"
  },
  "dependencies": {
    "@auth/core": "^1.3.0",
    "@auth/express": "^1.3.1",
    "@azure/storage-blob": "^12.15.0",
    "@libsql/client": "^0.4.3",
    "@lucia-auth/adapter-drizzle": "^3.1.2",
    "@lucia-auth/express": "^3.0.3",
    "@lucia-auth/kit": "^2.1.2",
    "@lucia-auth/turso": "^2.0.2",
    "@types/mime-types": "^2.1.2",
    "@types/uuid": "^9.0.8",
    "archiver": "^7.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.12",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "fuse.js": "^7.0.0",
    "lucia": "^3.2.2",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.49.1",
    "pg": "^8.11.5",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.4",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.12.12",
    "@types/openai": "^3.2.9",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "description": "機械故障発生時のトラブルシューティングシステム"
}
