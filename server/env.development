# Emergency Assistance System - ローカル開発環境変数
# この開発用ファイルは安全な値のみ含み、コミット可能です

# ================================================
# OpenAI Configuration (DEVELOPMENT - 空欄)
# ================================================
OPENAI_API_KEY=
OPENAI_ORG_ID=
# 開発時のモデル設定（実際のAPIキーが設定されるまで無効）
OPENAI_MODEL=gpt-4
OPENAI_EMERGENCY_MODEL=gpt-4
OPENAI_KNOWLEDGE_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.5

# ================================================
# サーバー設定
# ================================================
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# ================================================
# API設定
# ================================================
API_BASE_URL=http://localhost:3001/api
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000

# ================================================
# 認証・セキュリティ設定
# ================================================
SESSION_SECRET=dev-session-secret-change-in-production-32-chars-minimum
JWT_SECRET=dev-jwt-secret-change-in-production
BCRYPT_SALT_ROUNDS=8

# ================================================
# データベース設定（開発時はSQLite使用）
# ================================================
DATABASE_URL=./app.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=emergency_assistance_dev
DB_USER=dev_user
DB_PASSWORD=dev_password

# ================================================
# Azure設定（開発時はローカルストレージ）
# ================================================
AZURE_STORAGE_CONNECTION_STRING=UseDevelopmentStorage=true
AZURE_STORAGE_ACCOUNT_NAME=devstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=dev_key_placeholder
AZURE_CONTAINER_NAME=emergency-uploads-dev

# ================================================
# 外部API（開発用テストキー）
# ================================================
WEATHER_API_KEY=dev_weather_key
MAPS_API_KEY=dev_maps_key
NOTIFICATION_SERVICE_KEY=dev_notification_key

# ================================================
# Emergency システム設定（開発用）
# ================================================
MAX_UPLOAD_SIZE=5242880
EMERGENCY_TIMEOUT=10000
DEFAULT_EMERGENCY_CONTACT=test-911
# AI機能（開発時は制限付き）
AI_EMERGENCY_ANALYSIS=false
AUTO_EMERGENCY_RESPONSE=false
KNOWLEDGE_BASE_ENABLED=true
REAL_TIME_MONITORING=true
