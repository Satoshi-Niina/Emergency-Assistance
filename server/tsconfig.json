{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ESNext"
  },
  "include": ["**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "../client/**/*"]
}