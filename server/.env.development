# Emergency Assistance - Development Environment Setup
# ローカル開発環境専用設定

# ================================================
# Development Environment Configuration
# ================================================
NODE_ENV=development
PORT=8080
CLIENT_PORT=5173

# ================================================
# API Configuration (Development)
# ================================================
API_BASE_URL=http://localhost:8080/api
API_PREFIX=/api

# ================================================
# Database Configuration (Development)
# ================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/webappdb_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webappdb_dev
DB_USER=postgres
DB_PASSWORD=password

# ================================================
# Security Configuration (Development)
# ================================================
JWT_SECRET=dev-jwt-secret-key-for-local-development-only
SESSION_SECRET=dev-session-secret-for-local-development-only
BCRYPT_SALT_ROUNDS=10

# Development bypass
BYPASS_DB_FOR_LOGIN=true

# ================================================
# OpenAI Configuration (Development - FILL IN YOUR API KEY)
# ================================================
OPENAI_API_KEY=your-development-openai-key-here
OPENAI_MODEL=gpt-4o
OPENAI_ORG_ID=
OPENAI_EMERGENCY_MODEL=gpt-4o
OPENAI_KNOWLEDGE_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ================================================
# CORS Configuration (Development)
# ================================================
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:8080
STATIC_WEB_APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:8080

# ================================================
# Local Development Settings
# ================================================
LOCAL_DEV=true
KNOWLEDGE_BASE_PATH=../knowledge-base
IMAGES_BASE_PATH=./knowledge-base/images
KNOWLEDGE_BASE_ENABLED=true
FAULT_HISTORY_STORAGE_MODE=file
CHAT_EXPORTS_PATH=./knowledge-base/exports
CHAT_IMAGES_PATH=./knowledge-base/images/chat-exports
FAULT_HISTORY_IMAGES_DIR=knowledge-base/images/chat-exports

# ================================================
# Session Configuration (Development)
# ================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ================================================
# Azure Configuration (Leave empty for development)
# ================================================
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_CONTAINER_NAME=

# ================================================
# Development Features
# ================================================
# Enable development features
DEBUG_MODE=true
HOT_RELOAD=true
VERBOSE_LOGGING=true
