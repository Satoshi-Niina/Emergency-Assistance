# Copy this file to .env and fill in secrets for local development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/webappdb
PG_SSL=disable

# JWT
JWT_SECRET=change_this_to_a_32_characters_minimum_secret

# Session
SESSION_SECRET=change_this_to_a_32_characters_minimum_secret

# Frontend
FRONTEND_URL=http://localhost:5173
CLIENT_PORT=5173

# Development shortcuts
# To allow login without DB for development only, set BYPASS_DB_FOR_LOGIN=true and provide SEED_* passwords
BYPASS_DB_FOR_LOGIN=false
SEED_ADMIN_PASSWORD=admin
SEED_NIINA_PASSWORD=

# OpenAI
OPENAI_API_KEY=your-openai-api-key-or-dev-mock-key

# Additional project-specific examples / paths
API_BASE_URL=http://localhost:8080/api
FRONTEND_URL=http://localhost:5173
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:5174
LOCAL_DEV=true
KNOWLEDGE_BASE_PATH=./knowledge-base
IMAGES_BASE_PATH=./knowledge-base/images

# Fault history / chat exports
FAULT_HISTORY_STORAGE_MODE=file
FAULT_HISTORY_IMAGES_DIR=knowledge-base/images/chat-exports
CHAT_EXPORTS_PATH=./knowledge-base/exports
CHAT_IMAGES_PATH=./knowledge-base/images/chat-exports

# Azure storage (leave empty for local dev)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=knowledge
