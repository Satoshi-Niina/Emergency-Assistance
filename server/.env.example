# Copy this file to .env and fill in secrets for local development
# Do NOT commit real secrets to source control

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/webappdb
PG_SSL=disable

# JWT
JWT_SECRET=change_this_to_a_32_characters_minimum_secret

# Session
SESSION_SECRET=change_this_to_a_32_characters_minimum_secret

# Frontend
FRONTEND_URL=http://localhost:5173
CLIENT_PORT=5173

# Development shortcuts
# To allow login without DB for development only, set BYPASS_DB_FOR_LOGIN=true and provide SEED_* passwords
BYPASS_DB_FOR_LOGIN=false
SEED_ADMIN_PASSWORD=admin
SEED_NIINA_PASSWORD=

# OpenAI
OPENAI_API_KEY=your-openai-api-key-or-dev-mock-key
