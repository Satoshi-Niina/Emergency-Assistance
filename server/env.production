# 本番環境設定
NODE_ENV=production
PORT=8080
API_BASE_URL=https://your-production-domain.com/api

# データベース設定（本番用）
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=emergency_assistance_prod
DB_USER=your-production-user
DB_PASSWORD=your-production-password

# JWT設定
JWT_SECRET=your-production-jwt-secret-key

# Azure Storage設定（本番用）
AZURE_STORAGE_CONNECTION_STRING=your-production-azure-connection-string
BLOB_CONTAINER=production-container

# OpenAI設定
OPENAI_API_KEY=your-production-openai-key

# セキュリティ設定
CORS_ORIGIN=https://your-production-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ログ設定
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/emergency-assistance/app.log
