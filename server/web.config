<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Minimal configuration for Azure App Service Node.js -->
    <!-- Let Azure App Service handle most of the Node.js detection automatically -->
    <handlers>
      <add name="iisnode" path="azure-server.mjs" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="azure-server.mjs"/>
        </rule>
      </rules>
    </rewrite>
    <iisnode
      loggingEnabled="true"
      enableXFF="true"
    />
    <!-- CORS設定（Azure App Service用）-->
    <!-- 注意: 動的なCORS設定はazure-server.mjsで処理されるため、ここでは削除 -->
    <!-- Azure App Serviceの認証設定（Easy Auth）が有効な場合は、認証を無効化するか、APIエンドポイントを除外してください -->
  </system.webServer>
</configuration>
