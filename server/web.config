<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Minimal configuration for Azure App Service Node.js -->
    <!-- Let Azure App Service handle most of the Node.js detection automatically -->
    <handlers>
      <add name="iisnode" path="azure-server.mjs" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="azure-server.mjs"/>
        </rule>
      </rules>
    </rewrite>
    <iisnode
      loggingEnabled="true"
      enableXFF="true"
    />
    <!-- CORS設定（Azure App Service用）-->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="https://witty-river-012f39e00.1.azurestaticapps.net" />
        <add name="Access-Control-Allow-Credentials" value="true" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS, PATCH" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With, Accept, Origin, Cache-Control, Pragma, Expires, Cookie" />
        <add name="Access-Control-Max-Age" value="86400" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
