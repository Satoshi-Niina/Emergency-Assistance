# 開発専用ローカル環境設定
# このファイルはデプロイに影響しません

# データベース設定（ローカル開発用）
DATABASE_URL=postgresql://postgres:password@localhost:5432/maintenance_restore

# セッション設定（開発用）
SESSION_SECRET=dev-local-super-secret-session-key

# サーバー設定（開発専用ポート）
PORT=3002
NODE_ENV=development

# クライアント設定（開発専用ポート）
VITE_PORT=5002
VITE_API_BASE_URL=http://localhost:3002

# 開発用の設定
DEV_MODE=true
ENABLE_DEBUG_LOGS=true
ENABLE_HOT_RELOAD=true

# ファイルアップロード設定（開発用）
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/dev

# 開発用の一時ファイルパス
TEMP_PATH=./temp/dev
LOG_PATH=./logs/dev

# 開発用のデータベース設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=emergency_assistance_dev
DB_USER=postgres
DB_PASSWORD=password

# 開発用のセッション設定
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# 開発用のCORS設定
CORS_ORIGIN=http://localhost:5002
CORS_CREDENTIALS=true

# 開発用のログレベル
LOG_LEVEL=debug

# OpenAI設定（開発用）
OPENAI_API_KEY=dev-mock-key 