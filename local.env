# ローカル開発環境用設定
NODE_ENV=development
PORT=8000

# データベース接続（ローカルPostgreSQL）
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@localhost:5432/webappdb

# JWT設定（32文字以上のランダムな文字列に変更してください）
JWT_SECRET=CHANGE_THIS_JWT_SECRET_TO_32_CHARACTERS_MINIMUM
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_TO_32_CHARACTERS_MINIMUM

# フロントエンドURL
FRONTEND_URL=http://localhost:5173

# 信頼プロキシ（ローカルでは不要）
TRUST_PROXY=0

# OpenAI API設定（実際のAPIキーに変更してください）
OPENAI_API_KEY=sk-CHANGE_THIS_TO_YOUR_ACTUAL_OPENAI_API_KEY

# ローカル開発用：データベース認証をバイパスしてデモログインを使用
BYPASS_DB_FOR_LOGIN=true