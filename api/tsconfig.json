{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "./**/*.js",
    "./**/*.ts"
  ],
  "exclude": [
    "../client",
    "../server",
    "../shared",
    "node_modules",
    "dist"
  ]
}
